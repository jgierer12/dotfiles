[include]
	path = ./catppuccin.gitconfig

[init]
	defaultBranch = main

[push]
	autoSetupRemote = true

[diff]
	algorithm = histogram

[branch]
	sort = -committerdate

[core]
	pager = delta

[interactive]
	diffFilter = delta --color-only

[delta]
	navigate = true
	line-numbers = true
	features = catppuccin-mocha

[merge]
	conflictstyle = zdiff3
