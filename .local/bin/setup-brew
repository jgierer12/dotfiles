#!/bin/bash

# Install Homebrew
if ! command -v brew > /dev/null; then
	echo "Installing Homebrew..."
	/bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
fi

# Update Homebrew
brew update

# Compilers & Runtimes
brew install node
brew install deno
brew install rustup
brew install gleam
brew install php

# Docker
brew install docker
brew install docker-buildx
brew install docker-compose
brew install lazydocker

# Language Tools
brew install pnpm
brew install vscode-langservers-extracted
brew install lua-language-server
brew install stylua
brew install marksman
brew install harper
brew install prettierd

# Shell
brew install fish
brew install atuin
brew install starship
brew install zoxide

# Utility
brew install fzf
brew install ripgrep
brew install fd
brew install sd
brew install stow
brew install btop
brew install eza
brew install ncdu
brew install httpie
brew install rclone
brew install restic
brew install yt-dlp
brew install glow
brew install fastfetch
brew install bat
brew install numbat
brew install magic-wormhole
brew install mosh
brew install sevenzip
brew install zlib
brew install tlrc
brew install wordnet
brew install yazi

# Git
brew install git
brew install gh
brew install lazygit
brew install git-delta

# Editors
brew install neovim
brew install helix

